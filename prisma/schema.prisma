generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  name     String
  email    String  @unique
  password String
  role     String  @default("USER")
  token    String
  tokenVal String?
  profile  Profile[]
}

model Profile {
  id  Int          @id @default(autoincrement())
  bio String?
  userId Int
  user   User      @relation(fields: [userId], references: [id])
  bookmark  Bookmark[] 
}

model Bookmark {
  id      Int @id @default(autoincrement())
  profileId  Int
  profile Profile @relation(fields: [profileId], references: [id])

}

model Book {
  id      Int @id @default(autoincrement())
  title   String
  synopsis String
  genre    Genre[]
  chapter  Chapter[] 
}

model Genre {
  id     Int @id  @default(autoincrement())
  title  String
  bookId Int
  book   Book @relation(fields: [bookId], references: [id])
}

model Chapter{
  id      Int @id @default(autoincrement())
  booKId  Book[]
}
